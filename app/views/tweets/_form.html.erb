<%= form_for(tweet) do |f| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user %>
    <%= f.text_field :user %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <% if @tweet.user.present? %>
　　  <div class="field">
  　　  <%= f.label :image %>
    　　<!--
        <%= image_tag(@tweet.user, :size => "100x100") %>
    　　-->
      <% if @tweet.user.end_with?(".mp4") %>
              <video width="100" height="100" controls="controls">
                  <source src=<%= "/"+ @tweet.user %>/>
                  Your browser does not support the video tag.
              </video>
      <% else %>
        <%= image_tag(@tweet.user, :size => "100x100") %>
      <% end %>
  　　</div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
