    <% @tweets.each do |tweet| %>
      <div class="tweet">
        <p><%= tweet.user %></p>
        <p><%= tweet.content %></p>

        <% if tweet.user.present? %>
                <% if tweet.user.end_with?(".mp4") %>
                  <!--
                    <td><%= tweet.image %></td>
                  -->
                  <!--
              　　 <td><%= video_tag(tweet.user, :autoplay => true, :loop => true, :size => "100x100") %></td>
                  -->
                    <p>
                        <video width="100" height="100" controls="controls">
                              <source src=<%= tweet.user %>/>
                         Your browser does not support the video tag.
                        </video>
                    </p>

                <% else %>
                  <p><%= image_tag(tweet.user, :size => "100x100") %></p>
                <% end %>
        <% end %>

        <p>
          <%= link_to 'Show', tweet %>
          <%= link_to 'Edit', edit_tweet_path(tweet) %>
          <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>

      <div class="hrDiv"></div>
    </div>

    <% end %>

